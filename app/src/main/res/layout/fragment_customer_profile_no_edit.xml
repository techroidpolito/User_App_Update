<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/custRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
    </android.support.v7.widget.RecyclerView>
    <RelativeLayout
        android:id="@+id/exceptionRl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:visibility="gone">
        <ImageView
            android:id="@+id/userdetailsImg"
            android:layout_width="100dp"
            android:layout_height="75dp"
            app:srcCompat="@drawable/user_details_icon"
            android:layout_centerInParent= "true"/>
        <TextView
            android:id="@+id/exceptionTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/custdetailsExp"
            android:layout_below="@+id/userdetailsImg"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="8dp" />
        <TextView
            android:id="@+id/signUpTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/signup"
            android:layout_below="@+id/exceptionTv"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/top_bg"
            android:padding="8dp" />
    </RelativeLayout>
</RelativeLayout>