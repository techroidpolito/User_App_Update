<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/addressRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">
        <ImageView
            android:id="@+id/addressImg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="16dp" />
        <TextView
            android:id="@+id/addressTypeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/addressImg"
            android:layout_marginTop="16dp"
            android:layout_marginRight="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:maxLines="1"/>
        <TextView
            android:id="@+id/addressFullTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/addressImg"
            android:layout_below="@+id/addressTypeTv"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:textSize="14sp"
            android:textStyle="normal"
            android:maxLines="3"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/edit_delteLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addressRl"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="62dp"
        android:visibility="gone">
        <TextView
            android:id="@+id/editTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="EDIT"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/deleteTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="DELETE"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_marginLeft="32dp"/>
    </LinearLayout>
</RelativeLayout>